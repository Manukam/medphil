<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_doctor_reg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.mendex.medphil.DoctorReg">

    <TextView
        android:text="Please fill the Form to Continue.."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="26dp"
        android:layout_marginTop="28dp"
        android:id="@+id/textView5"
        android:textAppearance="@android:style/TextAppearance.DialogWindowTitle" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/firstname"
        android:layout_alignStart="@+id/firstname"
        android:layout_marginTop="9dp"
        android:id="@+id/docField"
        android:hint="Field" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginTop="10dp"
        android:id="@+id/Hospital"
        android:hint="Hospital Name"
        android:layout_below="@+id/docField"
        android:layout_alignStart="@+id/docField" />

    <TextView
        android:text="Login Information"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:layout_marginTop="80dp"
        android:textAppearance="@android:style/TextAppearance.DialogWindowTitle"
        android:layout_below="@+id/Hospital"
        android:layout_alignStart="@+id/docUserName" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:layout_below="@+id/Hospital"
        android:layout_alignStart="@+id/Hospital"
        android:layout_marginTop="9dp"
        android:id="@+id/Mobile"
        android:hint="Mobile No." />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/docUserName"
        android:layout_marginTop="20dp"
        android:hint="User Name"
        android:layout_below="@+id/textView6"
        android:layout_alignStart="@+id/Mobile" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_marginTop="17dp"
        android:id="@+id/docPassword"
        android:hint="Password"
        android:layout_below="@+id/docUserName"
        android:layout_alignStart="@+id/docUserName" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginTop="11dp"
        android:id="@+id/firstname"
        android:hint="Full Name"
        android:layout_below="@+id/textView5"
        android:layout_alignStart="@+id/textView5" />

    <Button
        android:text="Sign Up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:layout_marginBottom="29dp"
        android:id="@+id/docSignUp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/docPassword"
        android:onClick="DocRegister"/>
</RelativeLayout>
